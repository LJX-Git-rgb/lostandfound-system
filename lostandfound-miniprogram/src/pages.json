{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/upload/upload",
			"style": {
				"navigationBarTitleText": "我要发布"
			}
		},
		{
			"path": "pages/myinfo/myinfo",
			"style": {
				"navigationBarTitleText": "我的信息"
			}
		},
		{
			"path": "pages/lost/lostList",
			"style": {
				"navigationBarTitleText": "寻物启事",
				"enablePullDownRefresh": true,
				"onReachBottomDistance": 300
			}
		},
		{
			"path": "pages/lost/lostInfo"
		},
		{
			"path": "pages/find/findList",
			"style": {
				"navigationBarTitleText": "失物招领",
				"enablePullDownRefresh": true
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#000",
		"selectedColor": "#090",
		"position": "bottom",
		"borderStyle": "black",
		"list": [
			{
				"pagePath": "pages/index/index",
				"text": "首页"
			},
			{
				"pagePath": "pages/upload/upload",
				"text": "我要发布"
			},
			{
				"pagePath": "pages/myinfo/myinfo",
				"text": "我的"
			}
		]
	},
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	}
}
